// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// In this project we will use prisma as an ORM for ease of use as well as security
// BTW please setup redis for caching and rate limiting
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  userId   String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String  @unique
  avatar   String?
  password String

  projectIds String[]
}

model Project {
  projectId String   @id @default(auto()) @map("_id") @db.ObjectId
  adminId   String
  title     String
  history   String[]

  userIds String[] 
  tagIds String[] 
  stageIds String[]
}

model Ticket {
  ticketId        String    @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String?
  creatorId       String
  assignedUserIds String[]

  parentTicketId  String?
  childTickets    String[]
  
  deadline        DateTime?

  commentIds  String[]
  stageId String
}

model Tag {
  tagId    String  @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  priority Int
  colour   String?
}
 
model Stage {
  stageId String @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  ticketIds String[]
}

model Comment {
  commentId String @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  authorId  String
}
