// In this project we will use prisma as an ORM for ease of use as well as security
// BTW please setup redis for caching and rate limiting
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  user_id           String    @id @default(auto()) @map("_id") @db.ObjectId
  email        String    @unique  
  password     String
  name         String
  avatar_image String 
}

model Ticket {
  ticket_id       String     @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String
  status          String
  comment         String
  // assigned_user   User       @relation("assignedTo", fields: [assigned_user], references: [user_id])
  // creator_user    User       @relation("createdBy", fields: [creator_user], references: [user_id])
  // parent_ticket   Ticket?    @relation("parentTicket", fields: [parent_ticket], references: [ticket_id])
  // child_tickets   Ticket[]   @relation("childTickets")
  created_at      DateTime   @default(now())
}
