// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema


// In this project we will use prisma as an ORM for ease of use as well as security
// BTW please setup redis for caching and rate limiting
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  userId          String          @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String          @unique
  avatar          String
  password        String
  projectId       String[]
  dateCreated     DateTime
}

model Project {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  adminId         String[]
  userId          String[]
  title           String
  tagId           String[]
  stageId         String[]
  ticketId        String[]
  dateCreated     DateTime
}

model Ticket {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String 
  creatorId       String
  assignedUserId  String?
  commentId       String[]
  dateCreated     DateTime
  childTicketId   String[]
  isDeleted       Boolean
}

model Tag {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  title           String          @unique
  priotity        Int
  colour          String
  ticketId        String[] 
}

model Stage {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  title           String          @unique
  description     String
  ticketId        String[]
}

model Comment {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  userId          String
  dateCreated     DateTime
  isDeleted       Boolean
}
